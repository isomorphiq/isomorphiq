{
    "name": "@isomorphiq/worker",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "types": "./src/index.ts"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "start": "node --experimental-strip-types src/worker-daemon.ts",
        "start:worker": "node --experimental-strip-types src/worker-daemon.ts",
        "start:worker:watch": "node --watch --experimental-strip-types src/worker-daemon.ts",
        "start:control": "node --experimental-strip-types src/daemon.ts",
        "start:control:watch": "node --watch --experimental-strip-types src/daemon.ts",
        "start:watch": "node --watch --experimental-strip-types src/worker-daemon.ts",
        "lint": "echo \"Lint not configured yet for @isomorphiq/worker\"",
        "test": "node --experimental-strip-types --test src/**/*.spec.ts"
    },
    "dependencies": {
        "@isomorphiq/auth": "workspace:*",
        "@isomorphiq/core": "workspace:*",
        "@isomorphiq/dashboard": "workspace:*",
        "@isomorphiq/http-api": "workspace:*",
        "@isomorphiq/mcp": "workspace:*",
        "@isomorphiq/notifications": "workspace:*",
        "@isomorphiq/realtime": "workspace:*",
        "@isomorphiq/scheduling": "workspace:*",
        "@isomorphiq/tasks": "workspace:*",
        "@isomorphiq/workflow": "workspace:*",
        "node-cron": "^3.0.3"
    },
    "devDependencies": {
        "typescript": "^5.9.3"
    }
}
