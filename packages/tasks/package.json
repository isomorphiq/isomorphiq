{
    "name": "@isomorphiq/tasks",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "types": "./src/index.ts"
        },
        "./critical-path": {
            "import": "./src/critical-path.ts",
            "types": "./src/critical-path.ts"
        },
        "./types": {
            "import": "./src/types.ts",
            "types": "./src/types.ts"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "lint": "echo \"Lint not configured yet for @isomorphiq/tasks\"",
        "test": "node --test --experimental-strip-types ../../scripts/workspace-test.ts",
        "start": "node --experimental-strip-types src/task-service-server.ts",
        "start:watch": "node --watch --experimental-strip-types src/task-service-server.ts"
    },
    "dependencies": {
        "@isomorphiq/core": "workspace:*",
        "@isomorphiq/core-microservice": "workspace:*",
        "@isomorphiq/persistence-level": "workspace:*",
        "@isomorphiq/realtime": "workspace:*",
        "@isomorphiq/search": "workspace:*",
        "@isomorphiq/types": "workspace:*",
        "@trpc/client": "^11.7.2",
        "@trpc/server": "^11.7.2",
        "@tsimpl/core": "0.1.1",
        "@tsimpl/runtime": "0.1.1",
        "@tsimpl/validation": "0.1.1",
        "level": "^10.0.0",
        "ws": "^8.18.3",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "typescript": "^5.9.3"
    }
}
