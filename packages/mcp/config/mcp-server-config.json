{
  "name": "task-manager",
  "type": "sse",
  "url": "http://localhost:3100/mcp",
  "headers": [],
  "command": "node",
  "args": ["--experimental-strip-types", "packages/mcp/src/mcp-server.ts"],
  "env": [
    { "name": "NODE_ENV", "value": "development" },
    { "name": "LOG_LEVEL", "value": "debug" },
    { "name": "TASKS_SERVICE_URL", "value": "http://127.0.0.1:3003/trpc/tasks-service" },
    { "name": "CONTEXT_SERVICE_URL", "value": "http://127.0.0.1:3003/trpc/context-service" }
  ],
  "description": "Task management MCP server for OpenCode",
  "tools": [
    "check_daemon_status",
    "start_daemon",
    "create_task",
    "list_tasks",
    "get_task",
    "update_task",
    "update_task_status",
    "update_task_priority",
    "delete_task",
    "create_context",
    "get_context",
    "get_file_context",
    "update_context",
    "replace_context",
    "delete_context",
    "list_contexts",
    "restart_daemon",
    "create_template",
    "list_templates",
    "get_template",
    "create_task_from_template",
    "initialize_templates",
    "create_automation_rule",
    "list_automation_rules",
    "update_automation_rule",
    "delete_automation_rule",
    "reload_automation_rules"
  ]
}
