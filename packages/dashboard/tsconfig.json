{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "types": ["node", "react"],
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.integration.test.ts"
    ]
}
