{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"module": "es2020",
		"target": "es2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": false,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "web", "scripts", "packages", "apps"]
}
